{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",

    /* Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,

    /* Module Resolution Options */
    "esModuleInterop": true,

    /** Advance Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
